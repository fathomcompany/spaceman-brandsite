@require './global/**'

// Global
body
  color white
  background black
  font-family 'bold', Arial, sans-serif
  @apply antialiased box-border;

video
  width 100%

img
  max-width 100%
  max-height 100%

.block-base
  @apply relative

/**
 * Adjacent block overrides
 **/


/**
 * Vue Visual tweaks
 */
// Make sure video covers entire container
.vv-fill-asset
  object-fit cover
  height 100% !important
  width @height

